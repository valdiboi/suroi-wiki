{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@suroi/*": ["vendor/suroi/*"],
      "@layouts/*": ["src/layouts/*"],
      "@generics/*": ["src/generics/*"],
      "@components/*": ["src/components/*"],
    }
  },
  "exclude": ["node_modules"]
}